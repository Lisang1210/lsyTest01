<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_f3f3f3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_mainlv_top_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/item_mainlv_top_month_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mount_out" />

        <TextView
            android:id="@+id/item_mainlv_top_month_out_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mainlv_top_month_out_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="￥807.5"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_mainlv_top_month_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mainlv_top_month_out_amount"
            android:text="@string/mount_in" />

        <TextView
            android:id="@+id/item_mainlv_top_month_in_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mainlv_top_month_out_amount"
            android:layout_toRightOf="@id/item_mainlv_top_month_in_text"
            android:layout_marginLeft="5dp"
            android:text="￥17572.0"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_mainlv_top_info_show"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_mainlv_top_month_out_amount"
            android:src="@mipmap/ih_show" />

        <TextView
            android:id="@+id/item_mainlv_top_budget_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_mainlv_top_month_in_amount"
            android:layout_marginLeft="5dp"
            android:text="￥11972.0"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_mainlv_top_budget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_mainlv_top_budget_amount"
            android:layout_alignBottom="@id/item_mainlv_top_month_in_amount"
            android:text="预算剩余" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mainlv_top_month_in_amount"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/ih_biaoge"
            android:layout_marginTop="20dp"
            android:text="@string/seeTable"
            android:textColor="@color/green_006400"
            android:textStyle="bold"
            android:drawablePadding="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_out"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="￥12.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/today_in"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="￥12.0"/>
    </LinearLayout>

</LinearLayout>